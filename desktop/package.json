{
  "name": "univo-desktop",
  "version": "1.0.0",
  "description": "Univo Desktop - Next-Generation Video Conferencing Application",
  "main": "src/main.js",
  "homepage": "./",
  "author": "Univo Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-react\" \"wait-on http://localhost:3000 && electron .\"",
    "start-react": "cd ../web && npm start",
    "build": "npm run build-react && npm run build-electron",
    "build-react": "cd ../web && npm run build",
    "build-electron": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --win --mac --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder --publish=never",
    "publish": "npm run build && electron-builder --publish=always",
    "test": "jest",
    "lint": "eslint src/",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@electron/remote": "^2.0.12",
    "auto-updater": "^1.0.2",
    "electron-context-menu": "^3.6.1",
    "electron-debug": "^3.2.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "electron-window-state": "^5.0.3",
    "node-notifier": "^10.0.1",
    "socket.io-client": "^4.7.4",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.univo.desktop",
    "productName": "Univo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../web/build",
        "to": "web",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "assets/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icons/icon.png",
      "category": "Network",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "snap",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Univo"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "univo",
        "repo": "desktop"
      }
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}